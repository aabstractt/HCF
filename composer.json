{
  "name": "abstract/hcf",
  "description": "HCF",
  "minimum-stability": "dev",
  "license": "Apache-2.0",
  "require": {
    "php": "^8.0",
    "ext-yaml": "*",
    "ext-pthreads": "*",
    "ext-json": "*",
    "ext-mysqli": "*",
    "ext-curl": "*"
  },

  "require-dev": {
    "phpstan/phpstan": "1.2.0",
    "phpstan/phpstan-strict-rules": "1.1.0",
    "pocketmine/pocketmine-mp": "4.0.4"
  },

  "autoload": {
    "psr-4": {
      "": [
        "src"
      ]
    }
  },
  "scripts": {
    "make-phar": "@php make-phar.php",
    "analyze": "./vendor/bin/phpstan analyze --no-progress --memory-limit=2G"
  }
}